<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VentasActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_marginRight="12dp"
                        android:drawableLeft="@drawable/flecha">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:hyphenationFrequency="normal"
                        android:layout_gravity="center"
                        android:text="Back">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:hyphenationFrequency="normal"
                        android:text="Ventas Productos">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:hyphenationFrequency="normal"
                        android:text="Done">

                    </TextView>

                </LinearLayout>

            </LinearLayout>






            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ultimos"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="40dp"
                android:paddingBottom="20dp"
                android:gravity="center"
                >


                <Button
                    android:layout_width="95dp"
                    android:layout_height="50dp"

                    android:text="1 Semana">

                </Button>

                <Button
                    android:layout_width="95dp"
                    android:layout_height="50dp"

                    android:text="1 Mes">

                </Button>


                <Button
                    android:layout_width="95dp"
                    android:layout_height="50dp"

                    android:text="2 Mes">

                </Button>




            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Puedes realizar operaciones de fecha"
                android:textAlignment="center"></TextView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agrupamiento por:"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textAlignment="textStart"></TextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="30dp"
                android:gravity="center">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"

                    android:layout_marginRight="10dp"
                    android:drawableLeft="@drawable/ic_action_search"

                    android:hint="Nombre del Producto">

                </Button>

            </LinearLayout>






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="40dp"
                android:gravity="center"
                >


                <Button
                    android:layout_width="95dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="#909AEB"
                    android:text="Aplicar">

                </Button>

                <Button
                    android:layout_width="108dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="#E07A75"
                    android:text="Cancelar">

                </Button>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="95dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:text="Nombre">

                </TextView>

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:text="Ventas">

                </TextView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="95dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:text="Zapatillas Adidas">

                </TextView>

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:text="S/500.00">

                </TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center"
                >


                <TextView
                    android:layout_width="95dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:text="Zapatillas Nike">

                </TextView>

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:text="S/500.00">

                </TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center"
                >


                <TextView
                    android:layout_width="95dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:text="Zapatillas Puma">

                </TextView>

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:text="S/500.00">

                </TextView>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center"
                >


                <TextView
                    android:layout_width="95dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:text="Zapatillas Puma">

                </TextView>

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:text="S/500.00">

                </TextView>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center"
                >


                <TextView
                    android:layout_width="95dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:text="Zapatillas Puma">

                </TextView>

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:text="S/500.00">

                </TextView>


            </LinearLayout>

            <ImageButton
                android:id="@+id/btnMas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/more"
                >

            </ImageButton>






        </LinearLayout>



    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>